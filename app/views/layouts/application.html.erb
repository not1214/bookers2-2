<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/acf4a8face.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column">
    <header>
　　　<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-light">
　　　  <div class="container">
　　　    <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbarNavDropDown" aria-controls="navbarNavDropDown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropDown">
            <ul class="navbar-nav ml-auto font-weight-bold">
              <% if user_signed_in? %>
                <li class="nav-item p-3"><i class="fas fa-home"></i>Home</li>
                <li class="nav-item p-3"><i class="fas fa-users"></i>Users</li>
                <li class="nav-item p-3"><i class="fas fa-book-open"></i>Books</li>
                <li class="nav-item p-3"><i class="fas fa-sign-out-alt"></i> <%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li class="nav-item p-3"><i class="fas fa-home"></i>Home</li>
                <li class="nav-item p-3"><i class="fas fa-link"></i>About</li>
                <li class="nav-item p-3"><i class="fas fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path %></li>
                <li class="nav-item p-3"><i class="fas fa-sign-in-alt"></i><%= link_to "Log in", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      CopyRight Infratop.inc
    </footer>

  </body>
</html>
