<%= render "books/list", book: @book %>

<div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @user.each do |user| %>
            <td><%=attachment_image_tag user.profile_image, :fill, 30, 30, fallback:"no_image.jpg" %></td>
            <td><%= link_to user.books.title, book_path %></td>
            <td><%= user.books.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>